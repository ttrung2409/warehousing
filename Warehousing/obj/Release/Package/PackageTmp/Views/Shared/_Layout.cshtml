<!DOCTYPE html>
<html lang="en">
	<head>        
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

        <title>@ViewBag.Title</title>
                                
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.min.css")" />        
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/ui-grid.min.css")" />                
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/select.min.css")" /> 
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />        

        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>        

        <script type="text/javascript" src="@Url.Content("~/Scripts/angular/angular.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular/angular-route.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular/angular-animate.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular/angular-resource.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular-ui/ui-bootstrap-tpls.min.js")"></script>        
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular-ui/ui-grid.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/angular-ui/select.min.js")"></script>           

        <script type="text/javascript" src="@Url.Content("~/Scripts/underscore/underscore.min.js")"></script>        
        <script type="text/javascript" src="@Url.Content("~/Scripts/underscore/underscore.string.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/underscore/underscore.string.format.js")"></script>
                
        @Scripts.Render("~/bundles/modernizr")
               
        <script type="text/javascript">
            window.baseUrl = '@Url.Content("~")'
        </script>

        <!-- Require js -->
        <script src="@Url.Content("~/Scripts/requirejs/require.js")" type="text/javascript" data-main="@Url.Content("~/Application/main.js")"></script>
	</head>

	<body>
   <nav class="navbar navbar-default" ng-controller="menu">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNav" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Inventory Management</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="nav navbar-nav">
        <li ng-class="{'active': currentPage=='ItemList'}"><a href="@Url.Content("~/#/")" ng-click="setCurrentPage('ItemList')">Item List</a></li>        
        <li ng-class="{'active': currentPage=='StockReceiving' || currentPage=='CycleCount'}" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Transactions<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li ng-class="{'active': currentPage=='StockReceiving'}"><a href="@Url.Content("~/#/stockReceipts")" ng-click="setCurrentPage('StockReceiving')">Stock Receiving</a></li>
            <li ng-class="{'active': currentPage=='CycleCount'}"><a href="@Url.Content("~/#/cycleCounts")" ng-click="setCurrentPage('CycleCount')">Cycle Count</a></li>            
          </ul>
        </li>
          <li ng-class="{'active': currentPage=='InventoryList'}" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li ng-class="{'active': currentPage=='InventoryList'}"><a href="@Url.Content("~/#/inventoryList")" ng-click="setCurrentPage('InventoryList')">Inventory List</a></li>            
          </ul>
        </li>
      </ul>    
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
        <div class="body-content">
            @RenderBody()        
        </div>
        
        @RenderSection("scripts", required: false)	
	</body>
</html>